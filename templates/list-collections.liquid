<div class="list-collection">
    <div class="gt_container">
        <h1>{{ page_title }}</h1>
        <div class="list-collection-content">
            {%- for collection in collections -%}
            <div class="list-collection-item">
                <a href="{{ collection.url }}">
                    {%- if collection.image -%}
                        {%- assign collection_image = collection.image -%}
                    {%- elsif collection.products.first and collection.products.first.images != empty -%}
                        {%- assign collection_image = collection.products.first.featured_image -%}
                    {%- else -%}
                        {%- assign collection_image = blank -%}
                    {%- endif -%}
    
                    <div class="bg_image" style=" background-image: url(' {{ collection_image | img_url: '480x' }} ') ">
    
                    </div>
                    <div class="overlay"></div>
    
                    <p class="">{{ collection.title }}</p>
                </a>
            </div>
            {%- endfor -%} 
        </div>
    </div>
</div>
<style>
  .list-collection h1 {
  font-size: 35px;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 55px;
  margin-top: 55px;
  text-align: center;
}
.list-collection .list-collection-content {
  display: flex;
  flex-wrap: wrap;
}
.list-collection .list-collection-content .list-collection-item {
  width: calc(100% / 3 - 30px);
  margin-right: 30px;
  margin-bottom: 30px;
  position: relative;
}
.list-collection .list-collection-content .list-collection-item:nth-of-type(3n) {
  margin-right: 0;
}
@media (max-width: 768px) {
  .list-collection .list-collection-content .list-collection-item {
    width: calc(100% / 2 - 15px);
  }
  .list-collection .list-collection-content .list-collection-item:nth-of-type(3n) {
    margin-right: 30px;
  }
  .list-collection .list-collection-content .list-collection-item:nth-of-type(2n) {
    margin-right: 0;
  }
}
.list-collection .list-collection-content .list-collection-item .bg_image {
  overflow: hidden;
  position: absolute;
  display: block;
  height: 100%;
  width: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}
.list-collection .list-collection-content .list-collection-item .overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #685f58;
  opacity: 0.3;
  top: 0;
  left: 0;
  visibility: hidden;
}
.list-collection .list-collection-content .list-collection-item a {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  display: inline-block;
  position: relative;
}
.list-collection .list-collection-content .list-collection-item a p {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 22px;
  line-height: 1.3;
  font-weight: 600;
  opacity: 0;
  visibility: hidden;
  color: #ffffff;
  z-index: 999999;
  text-align: center;
}
.list-collection .list-collection-content .list-collection-item a:hover .overlay {
  visibility: visible;
}
.list-collection .list-collection-content .list-collection-item a:hover p {
  opacity: 1;
  visibility: visible;
}
</style>